    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Frontend",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Daemon",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/daemon",
            "args": [
                "--db-path=${workspaceFolder}/watchtheburn.db",
                "--worker-count=2"
            ]
        },
        {
            "name": "Launch Stats",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/analysis",
            "args": [
                "--db-path=${workspaceFolder}/watchtheburn.db"
            ]
        }
    ]
}
